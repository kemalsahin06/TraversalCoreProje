@using EntityLayer.Concrete;
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserNewLayout.cshtml";
}

<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-header">
				<h4 class="card-title"> Aktif </h4>
				<a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
				<div class="heading-elements">
					<ul class="list-inline mb-0">
						<li><a data-action="collapse"><i class="ft-minus"></i></a></li>
						<li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
						<li><a data-action="expand"><i class="ft-maximize"></i></a></li>
						<li><a data-action="close"><i class="ft-x"></i></a></li>
					</ul>
				</div>
			</div>
			<div class="card-content collapse show">
				<div class="card-body">
					<p class="card-text"> Alanında uzmaan rehberlerimiz eşliginde güzel bir tatil yapmak için bizi tercih edebilirsiniz ...  </p>

					<div class="table-responsive">
						<table class="table">
							<thead>
								<tr>
									<td>#</td>
									<td>Şehir</td>
									<td>Süre</td>
									<td>Kapasite</td>
									<td>Fiyat</td>
									<td>Detaylar</td>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DestinationID</td>
										<td>@item.CityName</td>
										<td>@item.DayNight</td>
										<td>@item.Capacity</td>
										<td>@item.Price</td>
										<td><a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-info">Detaylar</a></td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



