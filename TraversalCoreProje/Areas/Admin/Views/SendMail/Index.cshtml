@model TraversalCoreProje.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<h1>Yeni Mail Gönderme Sayfası</h1>

<form method="post">
    <br />

    <div class="form-group">
        @Html.Label("Alıcı Mail Adresi")
        <input type="text" asp-for="ReceiverMail" class="form-control" />

    </div>
    <br />

    <div class="form-group">
        @Html.Label("Konu Başlıgı")
        <input type="text" asp-for="Subject" class="form-control" />
    </div>
    <br />
    
    <br />
    <div class="form-group">
        @Html.Label("Açıklamalar")
        <textarea cols="30" rows="5" class="form-control" asp-for="Body"></textarea>
        
    </div>
    <br />


    <button class="btn btn-autline-success"> Mail Gönder</button>
</form>

